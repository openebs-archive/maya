#!/bin/bash
set -e

IMAGEID=$( sudo docker images -q openebs/m-exporter:${IMAGE_TAG} )

if [ ! -z "${DNAME}" ] && [ ! -z "${DPASS}" ];
then
  sudo docker login -u "${DNAME}" -p "${DPASS}";
  # Push image to docker hub
  sudo docker push openebs/m-exporter:${IMAGE_TAG} ;
  if [ ! -z "${TRAVIS_TAG}" ] ;
  then
    # Push with different tags if tagged as a release
    # When github is tagged with a release, then Travis will
    # set the release tag in env TRAVIS_TAG
    sudo docker tag ${IMAGEID} openebs/m-exporter:${TRAVIS_TAG}
    sudo docker push openebs/m-exporter:${TRAVIS_TAG};
    sudo docker tag ${IMAGEID} openebs/m-exporter:latest
    sudo docker push openebs/m-exporter:latest;
  fi;
else
  echo "No docker credentials provided. Skip uploading openebs/m-exporter:${IMAGE_TAG} to docker hub";
fi;
